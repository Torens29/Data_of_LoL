{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "types": ["vite/client"],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": [
        "src",
        "src/env.d.ts" 
    ]
}
